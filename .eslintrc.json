{
    "env": {
        "browser": true,
        "es2020": true
    },
	"parser": "babel-eslint",
	"extends": ["airbnb", "prettier", "prettier/react"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle":  ["error", { "allow": ["_id","_raw","_json","_idDoc"] }],
        "no-param-reassign": [2, { "props": false }],
        "import/prefer-default-export": "off",
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}